<body>
	
<header>
	<nav>
		<div class="header-bar">
			<ul>
				<li><a href="index">_Home_</a></li>
			</ul>
			<div class="login-div">
				{{# if session.u_id}}
					<form action="/logout" method="POST">
						<button type="submit" name="submit" class="logout-button">Logout</button>
						<a href="user_home" class="user_a">User</a>
					</form>
				{{ else}}
					<form action="/login" method="POST">
						<input type="text" name="uid" id="uid" placeholder="username">
						<input type="password" name="pwd" id="pwd" placeholder="password">
						<button type="submit" name="submit">Login</button>
					</form>
					<a href="forgot_pwd">Forgot_Password?</a>
					<a href="signup">Sign Up</a>	
				{{/if}}
			</div>
		</div>
	</nav>
</header>

